<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="musicBeanClassic"
          class="ua.study.ClassicalMusic"
          init-method="doMyInit"
          destroy-method="doMyDestroy">
    </bean>

    <bean id="musicBeanRock"
          class="ua.study.RockMusic">
    </bean>

    <bean id = "musicBeanElectronic"
          class="ua.study.ElectronicMusic">
    </bean>

    <bean id="musicPlayer"
          class="ua.study.MusicPlayer"
          scope="prototype">
        <property name="name" value="${musicPlayer.name}"/>
        <property name="musicList">
            <list value-type="ua.study.Music">
                <ref bean="musicBeanClassic"/>
                <ref bean="musicBeanRock"/>
                <ref bean="musicBeanElectronic"/>
            </list>
        </property>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>
</beans>